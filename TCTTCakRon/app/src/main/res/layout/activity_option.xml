<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/tt" />

    <ImageView
        android:id="@+id/fitur_image_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        android:onClick="handlerOnClickFitur"
        app:srcCompat="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/laporan_image_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        android:onClick="handlerOnClickStatistik"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fitur_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Fitur"
        android:onClick="handlerOnClickFitur"
        app:layout_constraintEnd_toEndOf="@+id/fitur_image_option"
        app:layout_constraintStart_toStartOf="@+id/fitur_image_option"
        app:layout_constraintTop_toBottomOf="@+id/fitur_image_option" />

    <TextView
        android:id="@+id/laporan_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Statistik"
        android:onClick="handlerOnClickStatistik"
        app:layout_constraintEnd_toEndOf="@+id/laporan_image_option"
        app:layout_constraintStart_toStartOf="@+id/laporan_image_option"
        app:layout_constraintTop_toBottomOf="@+id/laporan_image_option" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageViewItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/textMakananItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="Nama Makanan"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@+id/imageViewItem2"
            app:layout_constraintTop_toTopOf="@+id/imageViewItem2" />

        <Button
            android:id="@+id/buttonUpdateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="handlerOnClickUpdate"
            android:text="Update"
            app:layout_constraintStart_toStartOf="@+id/textHargaItem2"
            app:layout_constraintTop_toBottomOf="@+id/textHargaItem2" />

        <TextView
            android:id="@+id/textHargaItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Harga"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="@+id/textMakananItem2"
            app:layout_constraintTop_toBottomOf="@+id/textMakananItem2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
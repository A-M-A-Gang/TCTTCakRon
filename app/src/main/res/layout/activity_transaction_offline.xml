<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCream"
    tools:context=".TransactionOffline">

    <TextView
        android:id="@+id/textoffline"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="sans-serif-medium"
        android:text="Transaction Offline"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/texttittlenama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoffline"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:text="Nama Pelanggan"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/main_menu_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texttittlenama"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerMakanan"

            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"/>

        <Spinner
            android:id="@+id/spinnerJumlah"
            android:layout_width="5dp"
            android:layout_height="29dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="4dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="Harga"
            android:textAlignment="center" />

        <Button
            android:id="@+id/delete_list_menu"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:text="Delete" />

    </LinearLayout>

    <EditText
        android:id="@+id/checkednamapelanggan9"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textoffline"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="232dp"
        android:layout_marginBottom="102dp"
        android:fontFamily="sans-serif-medium"
        android:text="Total :"
        android:textColor="@color/colorBlack" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Pesan"
        android:theme="@style/buttonstyle" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginTop="670dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:onClick="handlerOnClickBack"
        android:text="Kembali"
        android:theme="@style/buttonstyle" />

    <Button
        android:id="@+id/add_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_menu_wrapper"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Tambah" />

</RelativeLayout>